# API Service Configuration
# Copy this file to .env and update values

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false

# Logging
API_LOG_LEVEL=INFO
API_LOG_FORMAT="%(asctime)s - %(levelname)s - %(name)s - %(funcName)s - %(message)s"

# Database
API_DATABASE_URL=postgresql+asyncpg://echomind:echomind@localhost:5432/echomind
API_DATABASE_ECHO=false

# Redis
API_REDIS_HOST=localhost
API_REDIS_PORT=6379
# API_REDIS_PASSWORD=

# Qdrant
API_QDRANT_HOST=localhost
API_QDRANT_PORT=6333
# API_QDRANT_API_KEY=

# MinIO
API_MINIO_ENDPOINT=localhost:9000
API_MINIO_ACCESS_KEY=minioadmin
API_MINIO_SECRET_KEY=minioadmin
API_MINIO_SECURE=false
API_MINIO_BUCKET=echomind-documents

# NATS
API_NATS_URL=nats://localhost:4222
# API_NATS_USER=
# API_NATS_PASSWORD=
API_NATS_CONNECT_TIMEOUT=30
API_NATS_RECONNECT_TIME_WAIT=30
API_NATS_MAX_RECONNECT_ATTEMPTS=3

# Authentication
API_AUTH_ISSUER=https://auth.echomind.local
API_AUTH_AUDIENCE=echomind-api
# API_AUTH_JWKS_URL=
# API_AUTH_SECRET=dev-secret-key

# Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WS_MESSAGES=30

# CORS
API_CORS_ORIGINS=["http://localhost:3000"]

# Health Check
API_HEALTH_CHECK_TIMEOUT=5.0
