# =============================================================================
# Agent System Configuration (src/agent/)
# =============================================================================

# OpenAI-Compatible API Configuration
# Default: OpenAI official API (switch to vLLM/LMStudio by changing base URL)
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# Model Configuration
OPENAI_MODEL=gpt-4o-mini  # Options: gpt-4o, gpt-4o-mini, gpt-3.5-turbo

# Agent System Paths
AGENT_CONFIG_PATH=config/agents/config.yaml
AGENT_SESSIONS_DIR=data/agent/sessions

# Logging
AGENT_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
