# Connector Service Configuration

# Service Settings
CONNECTOR_ENABLED=true
CONNECTOR_MAX_CONCURRENT_DOWNLOADS=5
CONNECTOR_MAX_FILE_SIZE_BYTES=104857600
CONNECTOR_GOOGLE_EXPORT_MAX_SIZE_BYTES=10485760

# Health Check
CONNECTOR_HEALTH_PORT=8080

# Database
CONNECTOR_DATABASE_URL=postgresql+asyncpg://postgres:postgres@echomind-postgres:5432/echomind
CONNECTOR_DATABASE_ECHO=false

# NATS
CONNECTOR_NATS_URL=nats://echomind-nats:4222
CONNECTOR_NATS_STREAM_NAME=ECHOMIND
CONNECTOR_NATS_CONSUMER_NAME=connector-consumer

# MinIO
CONNECTOR_MINIO_ENDPOINT=echomind-minio:9000
CONNECTOR_MINIO_ACCESS_KEY=minioadmin
CONNECTOR_MINIO_SECRET_KEY=minioadmin
CONNECTOR_MINIO_SECURE=false
CONNECTOR_MINIO_BUCKET=echomind-documents

# Google Drive (set these for Google Drive connector)
# CONNECTOR_GOOGLE_SERVICE_ACCOUNT_JSON=/secrets/google-sa.json
# CONNECTOR_GOOGLE_CLIENT_ID=
# CONNECTOR_GOOGLE_CLIENT_SECRET=

# Microsoft Graph / OneDrive (set these for OneDrive connector)
# CONNECTOR_MS_GRAPH_CLIENT_ID=
# CONNECTOR_MS_GRAPH_CLIENT_SECRET=
# CONNECTOR_MS_GRAPH_TENANT_ID=

# Retry Settings
CONNECTOR_MAX_RETRIES=3
CONNECTOR_RETRY_BASE_DELAY=1.0

# Logging
CONNECTOR_LOG_LEVEL=INFO
