# EchoMind API Service Configuration

# Logging
API_LOG_LEVEL=INFO
API_LOG_FORMAT=%(asctime)s - %(levelname)s - %(name)s - %(funcName)s - %(message)s

# API Settings
API_TITLE=EchoMind API
API_VERSION=1.0.0
API_DEBUG=false

# JWT/Auth Settings
API_JWT_ALGORITHM=RS256
API_JWT_AUDIENCE=echomind-api

# CORS Settings (JSON array format)
API_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Redis Cache (if needed in future)
# REDIS_HOST=redis
# REDIS_PORT=6379

# Google OAuth (for Google Workspace integration)
# API_GOOGLE_CLIENT_ID=
# API_GOOGLE_CLIENT_SECRET=
# API_GOOGLE_REDIRECT_URI=https://demo.echomind.ch/api/v1/google/auth/callback

# Readiness Probe Timeout (seconds)
API_READINESS_TIMEOUT=300
