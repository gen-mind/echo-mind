{
  "id": null,
  "uid": "loki-logs-explorer",
  "title": "Loki Logs Explorer",
  "description": "Service log browser with level filter and search",
  "tags": ["echomind", "logs", "loki"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 3,
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "label": "Service",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values(service)",
        "includeAll": true,
        "allValue": ".+",
        "current": { "text": "All", "value": "$__all" },
        "multi": true,
        "refresh": 2,
        "sort": 1
      },
      {
        "name": "level",
        "type": "custom",
        "label": "Level",
        "query": "DEBUG,INFO,WARNING,ERROR,CRITICAL",
        "includeAll": true,
        "allValue": "",
        "current": { "text": "All", "value": "$__all" },
        "multi": true
      },
      {
        "name": "search",
        "type": "textbox",
        "label": "Search",
        "current": { "text": "", "value": "" }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Log Volume by Service",
      "description": "Log line count per service over time",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum by (service) (count_over_time({service=~\"$service\", platform=\"docker\"} [$__auto]))",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 40,
            "showPoints": "never",
            "stacking": { "mode": "normal" },
            "drawStyle": "bars"
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["sum"] },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "id": 2,
      "title": "Error Rate by Service",
      "description": "ERROR and CRITICAL log lines per service",
      "type": "timeseries",
      "gridPos": { "h": 6, "w": 24, "x": 0, "y": 6 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum by (service) (count_over_time({service=~\"$service\", platform=\"docker\"} |~ \"(?i)(ERROR|CRITICAL)\" [$__auto]))",
          "legendFormat": "{{service}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 40,
            "showPoints": "never",
            "stacking": { "mode": "normal" },
            "drawStyle": "bars"
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["sum"] },
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "id": 3,
      "title": "Logs",
      "description": "Live log stream filtered by service, level, and search term",
      "type": "logs",
      "gridPos": { "h": 18, "w": 24, "x": 0, "y": 12 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{service=~\"$service\", platform=\"docker\"} |~ \"(?i)$level\" |~ \"$search\" | pattern `<_> <_> - <_> - <_> - <content>` | line_format \"{{ if .content }}{{ .content }}{{ else }}{{ .__line__ }}{{ end }}\"",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      }
    }
  ]
}
